%----------------------------------------------------------
% Package configuration 
%----------------------------------------------------------

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tau-class/tauenvs}[01/01/2026]

%----------------------------------------------------------
% Environment definition style 
%----------------------------------------------------------

\mdfdefinestyle{tauenvstyle}{
    backgroundcolor=taucolor!13,
    linecolor=taucolor,
    leftline=false,
    rightline=false,
    topline=false,
    bottomline=false,
    frametitlerule=true,
    frametitlerulewidth=0.2pt,
    frametitlefont=\color{taucolor}\bfseries\sffamily,
    frametitlealignment=\raggedright,
    innertopmargin=6pt,
    innerbottommargin=6pt,
    innerleftmargin=6pt,
    innerrightmargin=6pt,
    font=\sffamily\small,
    fontcolor=taucolor,
    frametitleaboveskip=4pt,
    frametitlebelowskip=4pt,
    skipabove=9pt
}

%----------------------------------------------------------
% Tauenv-, Info-, Note- environments
%----------------------------------------------------------

% Tauenv
\newmdenv[style=tauenvstyle]{tauenv}

%----------------------------------------------------------

% Info
\newmdenv[style=tauenvstyle, frametitle=\infolanguage]{info}

%----------------------------------------------------------

% Note
\newmdenv[style=tauenvstyle, frametitle=\notelanguage]{note}

%----------------------------------------------------------

\endinput