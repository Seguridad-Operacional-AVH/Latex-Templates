%----------------------------------------------------------
% Package configuration
%----------------------------------------------------------

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tau-class/taubabel}[01/01/2026]

%----------------------------------------------------------
% Label for "keywords" 
%----------------------------------------------------------

\newcommand{\keywordname}{Keywords---}

%----------------------------------------------------------

% Tip: Change manually the second {} if using another language

%----------------------------------------------------------
% Language labels for cross-references
%----------------------------------------------------------

% Cross-reference label for figure
\newcommand{\figlabel}{%
    \iflanguage{spanish}{%
        {Fig.}%
    }{%else
        {Fig.}%
    }%
}

% Cross-reference label for figures
\newcommand{\figslabel}{%
    \iflanguage{spanish}{%
        {Figs.}%
    }{%else
        {Figs.}%
    }%
}

% Cross-reference label for tables
\newcommand{\tablabel}{%
    \iflanguage{spanish}{%
        {Tabla}%
    }{%else
        {Table}%
    }%
}

% Caption and cross-reference label for codes
\newcommand{\captionlabelcode}{%
    \iflanguage{spanish}{%
        {C\'odigo}%
    }{%else
        {Code}%
    }%
}

% Cross-reference label for equations
\newcommand{\eqlabel}{%
    \iflanguage{spanish}{%
        {Ecuaci\'on}%
    }{%else
        {Equation}%
    }%
}

%----------------------------------------------------------
% Conjunction used between author names 
%----------------------------------------------------------

\newcommand{\andlanguage}{%
    \iflanguage{spanish}{%
        { y }%
    }{%else
        { and }%
    }%
}

%----------------------------------------------------------
% Translatable titles for custom environments
%----------------------------------------------------------

% Info environment
\newcommand{\infolanguage}{%
    \iflanguage{spanish}{%
        {Informaci\'on}%
    }{%else
        {Information}%
    }%
}

% Note environment
\newcommand{\notelanguage}{%
    \iflanguage{spanish}{%
        {Nota}%
    }{%else
        {Note}%
    }%
}

%----------------------------------------------------------

